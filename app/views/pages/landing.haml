.landing-page
  .hero-box.blue.pattern
    .container

      =image_tag "mobile-device-icons.png", class: 'hero'

      %h1 Manage your inventory on any device.

      %h4 Introducing Project SAM's simple software for health organizations in the developing world.

      .next-page

  .video-box
    .container

      %h2 See Project SAM in action

      .responsive-video
        %iframe{:allowfullscreen => "", :frameborder => "0", :height => "281", :mozallowfullscreen => "", :src => "//player.vimeo.com/video/99364186?badge=0&byline=0&portrait=0&title=0", :webkitallowfullscreen => "", :width => "500"}

  .features-box.blue
    .container

      %h2 A solution made for you

      .row
        .col-md-4
          %i.fa.fa-phone
          %p
            Manage your inventory on a computer, smartphone, or even on a conventional phone via SMS or voice.

        .col-md-4
          %i.fa.fa-clock-o
          %p
            We automatically keep track of when medications expire, making sure nothing goes to waste.

        .col-md-4
          %i.fa.fa-search
          %p
            Identify any source of lost inventory, simplify your operations, and eliminate supply chain bottlenecks.

  .quote-box.blue
    .container

      %h2 Our partners love us
      .row
        .col-md-5.col-md-offset-2
          %blockquote
            %p
              &ldquo;Project SAM allows me to know how much I have and when it expires first.&rdquo;
            %footer
              Luisa, Global Brigades Honduras

      .row
        .col-md-5.col-md-offset-5
          %blockquote.blockquote-reverse
            %p
              &ldquo;Project SAM has been a remarkable partner for Global Brigades. Not only have we been able to improve our operations but we are able to make more impact in our communities with their system.&rdquo;
            %footer
              Shital, Global Brigades International

  .team-box
    .container

      %h2 Let's work together

      .row.hidden-sm.hidden-xs
        .col-md-2.col-md-offset-3
          =image_tag 'daniel.png', class: 'profile-pic'
          %h3 Daniel
          %p
            CEO

        .col-md-2
          =image_tag 'david.png', class: 'profile-pic'
          %h3 David
          %p
            CTO

        .col-md-2
          =image_tag 'stelios.png', class: 'profile-pic'
          %h3 Stelios
          %p
            Developer

  .contact-box
    .container.contact-confirmation.display-none

      %h2 Thanks, we'll be in touch!

    .container.contact-content

      .row
        .col-md-4.col-md-offset-4
          = form_tag contact_path, remote: true do
            .form-group
              = label_tag :name, 'Your name'
              = text_field_tag :name, nil, required: true, class: 'form-control'
            .form-group
              = label_tag :email, 'Email'
              = email_field_tag :email, nil, required: true, class: 'form-control'
            .form-group
              = label_tag :company, 'Company'
              = text_field_tag :company, nil, required: true, class: 'form-control'
            .form-group
              = label_tag :message, 'Message'
              = text_area_tag :message, nil, class: 'form-control', rows: 3
            = submit_tag 'Get in touch', class: 'btn btn-lg btn-primary btn-block'

  .partner-box.hidded-sm.hidden-xs
    .container

      %h4 WE WORK WITH

      = image_tag 'global-brigades.png', class: 'partner-logo'
      = image_tag 'impact-engine.png', class: 'partner-logo'
      = image_tag 'twilio.png', class: 'partner-logo'
      = image_tag '1871.png', class: 'partner-logo'
      = image_tag 'technori.png', class: 'partner-logo'
      = image_tag 'booth.png', class: 'partner-logo'
      = image_tag 'microsoft.png', class: 'partner-logo'
